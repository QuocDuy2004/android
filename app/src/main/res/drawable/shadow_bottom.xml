<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow layer -->
    <item>
        <shape>
            <gradient
                android:startColor="#00000000"
                android:endColor="#33000000"
                android:angle="90"/>
        </shape>
    </item>
    <item
        android:bottom="20dp"
        >
        <shape>
            <solid android:color="#ffffff" />
        </shape>
    </item>
</layer-list>
